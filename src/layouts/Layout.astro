---
import "../styles/global.css";
const currentPath = Astro.url.pathname;
---

<html lang="en" class="lock-scroll">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Web | Aurumz</title>

    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Fira+Code:wght@300;400;500;600;700&family=JetBrains+Mono:wght@100;200;300;400;500;600;700;800&display=swap"
    />

    <slot name="head" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/nprogress/0.2.0/nprogress.min.css" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />

    <style>
      /* Smooth scrolling */
      html {
        scroll-behavior: smooth;
        height: 100%;
      }
      body {
        background: #0f141fff;
        margin: 0;
        height: 100%;
        font-family: 'Fira Code', 'JetBrains Mono', monospace;
        color: #E8E8F0;
      }
      input, textarea, button, select {
        font-family: 'Fira Code', 'JetBrains Mono', monospace;
        color: #E9E3DF;
      }
      .lock-scroll {
        overflow: hidden;
      }

      /* Responsive global adjustments */
      @media (max-width: 480px) {
        body {
          font-size: 0.9rem;
          padding: 0.5rem;
        }
      }

      @media (min-width: 481px) and (max-width: 768px) {
        body {
          font-size: 0.95rem;
        }
      }

      @media (min-width: 1025px) and (max-width: 1439px) {
        body {
          font-size: 1rem;
        }
      }

      @media (min-width: 1440px) {
        body {
          font-size: 1.1rem;
          max-width: 1600px;
          margin: 0 auto;
        }
      }
    </style>
  </head>

  <body>
    <slot />
    <!-- Load the progress script globally -->
    <script type="module" src="/src/scripts/progress.js"></script>
  </body>
</html>
