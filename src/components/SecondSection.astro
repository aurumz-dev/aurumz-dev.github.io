---
export interface Props {
  id?: string;
  content?: string;
  image?: string;
  reverse?: boolean;
}
const {
  id = "second-section",
  content = "",
  image = "/default-image.jpg",
  reverse = false,
} = Astro.props;
---
<section id={id} class="second-section">
  <div class={`content ${reverse ? "reverse" : ""}`}>
    <div class="text">
      <p>{content}</p>
    </div>
    <div class="image">
      <img src={image} alt="Section image" />
    </div>
  </div>
</section>

<style>
  .second-section {
    padding: 4rem;
    background: #0e0e0e;
  }
  .content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
    flex-wrap: wrap;
  }
  .content.reverse {
    flex-direction: row-reverse;
  }
  .text {
    flex: 1;
    min-width: 300px;
  }
  .image img {
    max-width: 100%;
    border-radius: 1rem;
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
  }
</style>
