---
import Layout from '../layouts/Layout.astro';
import Projects from '../components/Projects.jsx';
import ProjectsList from '../components/ProjectsList.jsx';
import BottomPanel from '../components/BottomPanel.jsx';
import SocialLinks from '../components/SocialLinks.jsx'; 
---

<Layout>
  <head slot="head">
    <title>Projects | Aurumz</title>
  </head>

  <Projects client:load />

  <!-- Scroll Down Button -->
  <button
    id="scroll-down-button"
    aria-label="Scroll down"
    type="button"
    style="
      position: fixed;
      bottom: 3rem; /* moved higher */
      left: 50%;
      padding: 0.4rem 0.8rem;
      font-size: 0.85rem;
      border-radius: 20px;
      border: 2px solid #4d6595;
      background-color: transparent;
      color: #4d6595;
      cursor: pointer;
      box-shadow: none;
      user-select: none;
      z-index: 1000;
      opacity: 1;
      visibility: visible;
      pointer-events: auto;
      transition: opacity 1s ease, visibility 1s ease;
      animation: float 3s ease-in-out infinite;
      transform: translateX(-50%);
    "
  >
    â†“ Scroll Down
  </button>

  <section class="projects-container">
    <ProjectsList client:load />
  </section>

  
  <SocialLinks client:load />

  <BottomPanel client:load />
</Layout>

<script type="module">
  const button = document.getElementById('scroll-down-button');

  function onClick() {
    window.scrollBy({ top: window.innerHeight, behavior: 'smooth' });
  }

  button.addEventListener('click', onClick);

  // Fade out and hide button after 5 seconds
  setTimeout(() => {
    button.style.opacity = '0';
    button.style.visibility = 'hidden';
    button.style.pointerEvents = 'none';
  }, 3000);
</script>

<style>
  @keyframes float {
    0%, 100% {
      transform: translateX(-50%) translateY(0);
    }
    50% {
      transform: translateX(-50%) translateY(-10px);
    }
  }

  .projects-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 4rem 1rem;
  }

  .projects-container > * {
    margin-top: 2rem;
    width: 100%;
    max-width: 1200px;
  }
</style>
