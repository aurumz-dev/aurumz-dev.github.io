---
import Layout from '../layouts/Layout.astro';
import TypingIntro from '../components/TypingIntro.jsx';
import SecondSection from '../components/SecondSection.astro';
import ThirdSection from '../components/ThirdSection.astro';
---

<Layout>
  <head slot="head">
    <title>Home | Aurumz</title>
  </head>

  <div id="root">
    <TypingIntro client:load />

    <SecondSection
      id="second-section"
      image="/assets/Reviewaid.png"
      reverse={false}
    />

    <ThirdSection
      id="third-section"
      heading="Some of My Open Access Projects."
      subtitle="Click to access their Web!"
    />
  </div>
</Layout>
